@model Wejobr.Models.Recrutador

<link rel="stylesheet" href="~/css/recrutador.css">

@{ ViewData["Title"] = "Editar cadastro de recrutador"; }

<main class="container pt-4">
   <section class="container-fluid" id="recrutSection1">
<h2 class="mt-3 ml-3">Editar dados do recrutador</h2>

<div class="row container m-auto mt-3 p-4 border border-light shadow-sm bg-light rounded">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_recrutador" />

            <div class="form-group">
                <label asp-for="Nome_recrutador" class="control-label">Nome do recrutador</label>
                <input asp-for="Nome_recrutador" class="form-control" />
                <span asp-validation-for="Nome_recrutador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email_recrutador" class="control-label">E-mail comercial</label>
                <input asp-for="Email_recrutador" class="form-control" />
                <span asp-validation-for="Email_recrutador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tel_recrutador" class="control-label">Telefone comercial</label>
                <input asp-for="Tel_recrutador" class="form-control" />
                <span asp-validation-for="Tel_recrutador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contato2_recrutador" class="control-label">Telefone celular</label>
                <input asp-for="Contato2_recrutador" class="form-control" />
                <span asp-validation-for="Contato2_recrutador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome_empresa" class="control-label">Empresa representada</label>
                <input asp-for="Nome_empresa" class="form-control" />
                <span asp-validation-for="Nome_empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_empresa" class="control-label">Código identificador da empresa</label>
                <input asp-for="Id_empresa" class="form-control" />
                <span asp-validation-for="Id_empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departamento_recrutador" class="control-label">Departamento</label>
                <input asp-for="Departamento_recrutador" class="form-control" />
                <span asp-validation-for="Departamento_recrutador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo_recrutador" class="control-label">Cargo</label>
                <input asp-for="Cargo_recrutador" class="form-control" />
                <span asp-validation-for="Cargo_recrutador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btnCadastrar my-2 my-sm-2 ml-2">Confirmar</button>
                <a class="btn btnFechar" asp-action="IndexAdmin">Voltar</a>
            </div>

        </form>
    </div>

</div>
</section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}