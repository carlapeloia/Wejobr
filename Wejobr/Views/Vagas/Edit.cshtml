@model Wejobr.Models.Vaga

<link rel="stylesheet" href="~/css/vagas.css">

@{ ViewData["Title"] = "Editar vaga"; }

<main class="container pt-4">
    <section class="container-fluid" id="vagasSection1">
        <h3 class="mt-3">Editar vaga</h3>


        <hr />
        
        <form class="container d-flex flex-column justify-content-center mt-3 mb-4 p-3 border border-light shadow-sm bg-light rounded" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cod_vaga" />
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Cargo_vaga" class="control-label">Cargo</label>
                    <input asp-for="Cargo_vaga" class="form-control" />
                    <span asp-validation-for="Cargo_vaga" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Salario_vaga" class="control-label">Salário</label>
                    <input asp-for="Salario_vaga" class="form-control" />
                    <span asp-validation-for="Salario_vaga" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Nivel_instrucao_vaga" class="control-label">Nível de instrução</label>
                    <input asp-for="Nivel_instrucao_vaga" class="form-control" />
                    <span asp-validation-for="Nivel_instrucao_vaga" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Regime_contratacao_vaga" class="control-label">Regime de contratação</label>
                    <input asp-for="Regime_contratacao_vaga" class="form-control" />
                    <span asp-validation-for="Regime_contratacao_vaga" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Localidade_vaga" class="control-label">Localidade</label>
                    <input asp-for="Localidade_vaga" class="form-control" />
                    <span asp-validation-for="Localidade_vaga" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Id_empresa" class="control-label">Código identificador da empresa</label>
                    <input asp-for="Id_empresa" class="form-control" />
                    <span asp-validation-for="Id_empresa" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Vaga_pcd" class="form-select-label">Vaga também destinada à PCD?</label>
                    <select asp-for="Vaga_pcd" class="custom-select" required>
                        <option value="" disabled selected>Selecionar</option>
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
                    </select>
                    <div class="invalid-feedback">
                        Por favor, selecione uma opção válida.
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Descricao_vaga" class="control-label">Descrição da vaga</label>
                    <textarea asp-for="Descricao_vaga" class="form-control"></textarea>
                    <span asp-validation-for="Descricao_vaga" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" required>
                    <label class="form-check-label" for="invalidCheck3">
                        Concordo com os termos e condições
                    </label>
                    <div class="invalid-feedback">
                        Você deve concordar, antes de continuar.
                    </div>
                </div>
            </div>
            
        </form>
        <div>
            <button class="btn btnCadastrar" type="submit">Confirmar</button>
            <a class="btn btnFechar" asp-action="IndexAdmin">Voltar</a>
        </div>

    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
