@model IEnumerable<Wejobr.Models.Vaga>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<link rel="stylesheet" href="~/css/site.css">
<link rel="stylesheet" href="~/css/NavFooter.css">
<link rel="stylesheet" href="~/css/vagas.css">

@{
    ViewData["Title"] = "IndexAdmin";
}

<h3 class="mt-3">Vagas</h3>

<table class="table container justify-content-center mt-3 p-4 border border-light shadow-sm bg-light rounded">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Cargo
            </th>
            <th>
                Salario
            </th>
            <th>
                PCD
            </th>
            <th>
                Nível
            </th>
            <th>
                E-mail
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_vaga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo_vaga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario_vaga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vaga_pcd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel_instrucao_vaga)
                </td>


                <td class="d-flex">

                    <a class="btn btnVaga mr-1" asp-action="Edit" asp-route-id="@item.Cod_vaga">Editar</a>

                    <a class="btn btnVaga mr-1" asp-action="Details" asp-route-id="@item.Cod_vaga">Ver detalhes</a>

                    <a class="btn btnVaga mr-1" asp-action="Delete" asp-route-id="@item.Cod_vaga">Excluir</a>

                </td>

            </tr>
        }
    </tbody>
</table>

<a class="btn btnFechar mr-1" asp-controller="Home" asp-action="Admin">Voltar</a>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
