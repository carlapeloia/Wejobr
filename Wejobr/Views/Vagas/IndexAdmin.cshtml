@model IEnumerable<Wejobr.Models.Vaga>

<link rel="stylesheet" href="~/css/vagas.css">

@{
    ViewData["Title"] = "Painel de vagas (Admin)";
}

<main class="container pt-4">
    <section class="container-fluid" id="vagasSection1">
<h2 class="mt-3 ml-3">Vagas</h2>

<table class="table container justify-content-center mt-3 p-4 border border-light shadow-sm table-light rounded table-responsive">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Cargo
            </th>
            <th>
                Salario
            </th>
            <th>
                PCD
            </th>
            <th>
                Nível
            </th>
            <th>
                Ações
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_vaga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo_vaga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario_vaga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vaga_pcd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel_instrucao_vaga)
                </td>


                <td class="d-flex">

                    <a class="btn btnVaga mr-1" asp-action="Edit" asp-route-id="@item.Cod_vaga">Editar</a>

                    <a class="btn btnVaga mr-1" asp-action="Details" asp-route-id="@item.Cod_vaga">Ver detalhes</a>

                    <a class="btn btnVaga" asp-action="Delete" asp-route-id="@item.Cod_vaga">Excluir</a>

                </td>

            </tr>
        }
    </tbody>
</table>

<a class="btn btnFechar mr-1 ml-3" asp-controller="Home" asp-action="Admin">Voltar</a>

</section>
</main>