<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wejobr ⦁ @ViewData["Title"]</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/NavFooter.css">

    <link rel="shortcut icon" href="~/css/Imagens/SVG Logos/Wejobr-Logo-Icon.svg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbarcolor">
        <a class="navbar-brand mr-5" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/Imagens/SVG Logos/Wejobr-Logo-horizontal-verde.svg" width="200vh" alt="Wejobr Logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerWJBR" aria-controls="navbarTogglerWJBR" aria-expanded="false" aria-label="Alterna navegação">
            <span><i class="bi bi-list-nested"></i></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerWJBR">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="" data-toggle="modal" data-target="#ExemploModalCentralizado">Candidato</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Empresas" asp-action="Index">Empresas</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Vagas" asp-action="Index">Vagas</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <div class="dropdown mr-sm-2">
                    <a class="dropdown-toggle" href="#" id="idiomaDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-globe"></i> Idioma</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="idiomaDropdown" id="idiomaDropStyle">
                        <a class="dropdown-item" href="#"><img src="~/css/Imagens/Icons/icon.brasil.png"> Português</a>
                        <a class="dropdown-item" href="#"><img src="~/css/Imagens/Icons/icon.reino-unido.png"> Inglês</a>
                        <a class="dropdown-item" href="#"><img src="~/css/Imagens/Icons/icon.espanha.png"> Espanhol</a>
                    </div>
                </div>
                <button class="btn btnEntrar my-2 my-sm-2" type="button" data-toggle="modal" data-target="#ExemploModalCentralizado">Entrar</button>
                <button asp-controller="Candidatoes" asp-action="Create" class="btn btnCadastrar my-2 my-sm-2 ml-2">Cadastrar</button>

                <div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body modalLogin">
                                <h5 class="modal-title" id="TituloModalCentralizado">Login</h5>
                                <select class="form-control col-sm-8 bg-light text-center">
                                    <option>Candidato</option>
                                    <option>Empresa</option>
                                    <input type="login" class="form-control col-sm-8 col-form-label bg-light" id="inputEmail3" placeholder="E-mail">
                                    <input type="password" class="form-control col-sm-8 bg-light" id="inputPassword3"
                                           placeholder="Senha">
                                    <button type="submit" class="btn btnEntrar">Entrar</button>
                                    <button type="button" class="btn btnFechar" data-dismiss="modal">Fechar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </nav>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="pt-4 my-md-5 pt-md-5 d-flex justify-content-center footer1">
        <div class="row container">
            <div class="col-12 col-md">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img class="mb-2" src="~/css/Imagens/SVG Logos/Wejobr-Logo-full_preto.svg" alt="" width="60vh"></a>
                <small class="d-block mb-3 text-muted">© 2021. Todos os direitos reservados.</small>
                <small class="d-block mb-3 text-muted">Desenvolvido por Squad 22</small>
            </div>
            <div class="col-6 col-md">
                <h5>Site</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="text-muted" asp-controller="Candidatoes" asp-action="Create">Candidato</a></li>
                    <li><a class="text-muted" asp-controller="Empresas" asp-action="Index">Empresas</a></li>
                    <li><a class="text-muted" asp-controller="Vagas" asp-action="Index">Vagas</a></li>
                    <li><a class="text-muted" asp-controller="Home" asp-action="Sobre">Sobre</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Candidato</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" asp-controller="Candidatoes" asp-action="Create">Cadastrar</a></li>
                    <li><a class="text-muted" href="" data-toggle="modal" data-target="#ExemploModalCentralizado">Entrar</a></li>
                    <li><a class="text-muted" asp-controller="Candidatoes" asp-action="Create">Cadastrar Currículo</a></li>
                    <li><a class="text-muted" asp-controller="Vagas" asp-action="Index">Vagas</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Empresas</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" asp-controller="Empresas" asp-action="Index">Área da Empresa</a></li>
                    <li><a class="text-muted" asp-controller="Empresas" asp-action="Create">Cadastrar Empresa</a></li>
                    <li><a class="text-muted" asp-controller="Recrutadors" asp-action="Create">Cadastrar Recrutador</a></li>
                    <li><a class="text-muted" asp-controller="Vagas" asp-action="Create">Cadastrar Vagas</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Contato</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted">Telefone: (99) 99999-9999</a></li>
                    <li><a class="text-muted">E-mail: contato@wejobr.com</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
