@model Wejobr.Models.Candidato

    <link rel="stylesheet" href="~/css/candidato.css">

@{
    ViewData["Title"] = "Cadastrar candidato";
}

<main class="container pt-4">
    <section class="container-fluid" id="candSection1">
<h2 class="mt-3 ml-3">Cadastrar Currículo</h2>

    <div class="container justify-content-center mt-3 p-4 border border-light shadow-sm bg-light rounded">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Nome_candidato" class="col-sm-2 col-form-label">Nome completo</label>
                <div class="col-sm-7">
                    <input type="text" asp-for="Nome_candidato" class="form-control bg-light">
                    <span asp-validation-for="Nome_candidato" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Rne_candidato" class="col-sm-2 col-form-label">RNE</label>
                <div class="col-sm-7">
                    <input type="text" asp-for="Rne_candidato" class="form-control bg-light">
                    <span asp-validation-for="Rne_candidato" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Nascimento_candidato" class="col-sm-2 col-form-label">Nascimento</label>
                <div class="col-sm-3">
                    <input type="date" asp-for="Nascimento_candidato" class="form-control bg-light">
                    <span asp-validation-for="Nascimento_candidato" class="text-danger"></span>
                </div>
                <label asp-for="Nacionalidade_candidato" class="col-sm-2 col-form-label">Nacionalidade</label>
                <input type="text" asp-for="Nacionalidade_candidato" class="form-control col-sm-2 bg-light">
                <span asp-validation-for="Nacionalidade_candidato" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Idioma_candidato" class="col-form-label col-sm-2">Idioma</label>
                <div class="col-sm-3">
                    <select multiple asp-for="Idioma_candidato" class="form-control bg-light" id="exampleFormControlSelect2">
                        <option>Português</option>
                        <option>Inglês</option>
                        <option>Espanhol</option>
                        <option>Italiano</option>
                        <option>Outros</option>
                    </select>
                </div>
                <label for="select" asp-for="Estado_civil_candidato" class="col-sm-2 col-form-label">Estado civil</label>
                <select asp-for="Estado_civil_candidato" class="form-control col-sm-2 bg-light">
                    <option>Solteiro</option>
                    <option>Casado</option>
                    <option>Divorciado</option>
                    <option>Viúvo</option>
                    <option>União estável</option>
                </select>
            </div>

            <div class="form-group row">
                <label asp-for="Cargo1_candidato" class="col-sm-2 col-form-label ">Cargo 1</label>
                <div class="col-sm-7">
                    <input type="text" asp-for="Cargo1_candidato" class="form-control bg-light">
                    <span asp-validation-for="Cargo1_candidato" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Cargo2_candidato" class="col-sm-2 col-form-label">Cargo 2</label>
                <div class="col-sm-7">
                    <input type="text" asp-for="Cargo2_candidato" class="form-control bg-light">
                    <span asp-validation-for="Cargo2_candidato" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Cargo3_candidato" class="col-sm-2 col-form-label">Cargo 3</label>
                <div class="col-sm-7">
                    <input type="text" asp-for="Cargo3_candidato" class="form-control bg-light">
                    <span asp-validation-for="Cargo3_candidato" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email_candidato" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-4">
                    <input type="email" asp-for="Email_candidato" class="form-control bg-light" id="inputEmail3">
                    <span asp-validation-for="Email_candidato" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Senha_candidato" class="col-sm-2 col-form-label">Senha</label>
                <div class="col-sm-4">
                    <input type="password" asp-for="Senha_candidato" class="form-control bg-light" id="inputPassword3">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Confirmar senha</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control bg-light" id="inputPassword3">
                </div>
            </div>

            <div class="form-group">
                <label for="exampleFormControlFile1">Insira seu currículo</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>

            <div class="form-check">
                <input class="form-check-input bg-light" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Li e aceito os presentes Termos e Condições de Uso
                </label>
            </div>

            <div class="btnConfirmar">
                <button type="submit" value="Create" class="btn btnCadastrar my-2 my-sm-2 ml-2">Confirmar</button>
                <a type="button" asp-area="" asp-controller="Home" asp-action="Admin" class="btn btnFechar">Voltar</a>
            </div>

        </form>
    </div>
</section>
</main>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }