@model IEnumerable<Wejobr.Models.Candidato>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/NavFooter.css">
    <link rel="stylesheet" href="~/css/vagas.css">


    @{
        ViewData["Title"] = "Painel do candidato (Admin)";
    }

    <h3 class="mt-3 ml-3">Candidatos</h3>

    <table class="table container justify-content-center mt-3 p-4 border border-light shadow-sm bg-light rounded">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Nascimento
                </th>
                <th>
                    Nacionalidade
                </th>
                <th>
                    RNE
                </th>
                <th>
                    Idioma
                </th>
                <th>
                    E-mail
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome_candidato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nascimento_candidato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nacionalidade_candidato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rne_candidato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Idioma_candidato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email_candidato)
                    </td>


                    <td class="d-flex">

                        <a class="btn btnVaga mr-1" asp-action="Edit" asp-route-id="@item.Id_candidato">Editar</a>

                        <a class="btn btnVaga mr-1" asp-action="Details" asp-route-id="@item.Id_candidato">Ver detalhes</a>

                        <a class="btn btnVaga mr-1" asp-action="Delete" asp-route-id="@item.Id_candidato">Excluir</a>

                    </td>

                </tr>
            }
        </tbody>
    </table>

    <a class="btn btnFechar mr-1 ml-3" asp-controller="Home" asp-action="Admin">Voltar</a>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


