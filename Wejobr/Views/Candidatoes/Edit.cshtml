@model Wejobr.Models.Candidato

    <link rel="stylesheet" href="~/css/candidato.css">

@{
    ViewData["Title"] = "Editar cadastro de candidato";
}

<main class="container pt-4">
<section class="container-fluid" id="candSection1">
<h2 class="mt-3 ml-3">Editar dados do candidato</h2>

<div class="row container m-auto  mt-3 p-4 border border-light shadow-sm bg-light rounded">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_candidato" />
            <div class="form-group">
                <label asp-for="Nome_candidato" class="control-label">Nome completo</label>
                <input asp-for="Nome_candidato" class="form-control" />
                <span asp-validation-for="Nome_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento_candidato" class="control-label">Nascimento</label>
                <input asp-for="Nascimento_candidato" class="form-control" />
                <span asp-validation-for="Nascimento_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado_civil_candidato" class="control-label">Estado civil</label>
                <input asp-for="Estado_civil_candidato" class="form-control" />
                <span asp-validation-for="Estado_civil_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nacionalidade_candidato" class="control-label">Nacionalidade</label>
                <input asp-for="Nacionalidade_candidato" class="form-control" />
                <span asp-validation-for="Nacionalidade_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rne_candidato" class="control-label">RNE</label>
                <input asp-for="Rne_candidato" class="form-control" />
                <span asp-validation-for="Rne_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idioma_candidato" class="control-label">Idioma</label>
                <input asp-for="Idioma_candidato" class="form-control" />
                <span asp-validation-for="Idioma_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email_candidato" class="control-label">E-mail</label>
                <input asp-for="Email_candidato" class="form-control" />
                <span asp-validation-for="Email_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo1_candidato" class="control-label">Cargo 1</label>
                <input asp-for="Cargo1_candidato" class="form-control" />
                <span asp-validation-for="Cargo1_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo2_candidato" class="control-label">Cargo 2</label>
                <input asp-for="Cargo2_candidato" class="form-control" />
                <span asp-validation-for="Cargo2_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo3_candidato" class="control-label">Cargo 3</label>
                <input asp-for="Cargo3_candidato" class="form-control" />
                <span asp-validation-for="Cargo3_candidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btnCadastrar my-2 my-sm-2 ml-3">Confirmar</button>
                <a class="btn btnFechar" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
</section>
</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}