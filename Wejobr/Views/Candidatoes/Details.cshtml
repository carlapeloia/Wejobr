@model Wejobr.Models.Candidato

    <link rel="stylesheet" href="~/css/candidato.css">

@{
    ViewData["Title"] = "Ver detalhes candidato";
}

<main class="container pt-4">
<section class="container-fluid" id="candSection1">
<h2 class="mt-3 ml-3">Detalhes do candidato</h2>
<hr />

<div class="container d-flex flex-column justify-content-center mt-4 mb-4 border border-light shadow-sm bg-light rounded">

    <dl class="row mt-3">
        <dt class="col-sm-2">
            Nome completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome_candidato)
        </dd>
        <dt class="col-sm-2">
            Nascimento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nascimento_candidato)
        </dd>
        <dt class="col-sm-2">
            Estado civil
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado_civil_candidato)
        </dd>
        <dt class="col-sm-2">
            Nacionalidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nacionalidade_candidato)
        </dd>
        <dt class="col-sm-2">
            RNE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rne_candidato)
        </dd>
        <dt class="col-sm-2">
            Idioma
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Idioma_candidato)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email_candidato)
        </dd>
        <dt class="col-sm-2">
            Cargo1
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo1_candidato)
        </dd>
        <dt class="col-sm-2">
            Cargo2
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo2_candidato)
        </dd>
        <dt class="col-sm-2">
            Cargo3
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo3_candidato)
        </dd>
    </dl>
</div>
<div class="ml-3">
    <a class="btn btnFechar" asp-action="Index">Voltar</a>
</div>

</section>
</main>
