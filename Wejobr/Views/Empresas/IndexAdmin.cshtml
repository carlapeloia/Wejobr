@model IEnumerable<Wejobr.Models.Empresa>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/NavFooter.css">
    <link rel="stylesheet" href="~/css/vagas.css">

    @{
        ViewData["Title"] = "Painel da empresa(Admin)";
    }

    <h3 class="mt-3 ml-3">Empresas</h3>

    <table class="table container  mt-3 p-4 border border-light shadow-sm bg-light rounded">
        <thead>
            <tr>
                <th>
                    Nome da empresa
                </th>
                <th>
                    CNPJ
                </th>
                <th>
                    CEP
                </th>
                <th>
                    Ramo
                </th>
                <th>
                    Telefone
                </th>
                <th>
                    Linkedin
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome_empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cnpj_empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cep_empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ramo_empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone_empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Linkedin_empresa)
                    </td>
                    <td class="d-flex">
                        <a class="btn btnVaga mr-1" asp-action="Edit" asp-route-id="@item.Id_empresa">Editar</a>
                        <a class="btn btnVaga mr-1" asp-action="Details" asp-route-id="@item.Id_empresa">Ver detalhes</a>
                        <a class="btn btnVaga mr-1" asp-action="Delete" asp-route-id="@item.Id_empresa">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btnFechar mr-1 ml-3" asp-controller="Home" asp-action="Admin">Voltar</a>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

