@model Wejobr.Models.Empresa

<link rel="stylesheet" href="~/css/empresas.css">

@{ ViewData["Title"] = "Cadastrar empresa"; }

<main class="container pt-4">
    <section class="container-fluid" id="empresasSection1">
        <h2 class="mt-3 ml-3">Cadastrar Empresa</h2>
        <hr />

        <form class="container d-flex flex-column justify-content-center mt-3 mb-4 p-3 border border-light shadow-sm bg-light rounded" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome_empresa" class="control-label" for="validationServer1">Nome da empresa</label>
                    <input asp-for="Nome_empresa" type="text" class="form-control" id="validationServer1" placeholder="Informe o nome da empresa" required>
                    <span asp-validation-for="Nome_empresa" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Linkedin_empresa" class="control-label" for="validationServer2">Linkedin</label>
                    <input asp-for="Linkedin_empresa" type="text" class="form-control" id="validationServer2" placeholder="Informe o Linkedin da empresa" required>
                    <span asp-validation-for="Linkedin_empresa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Cnpj_empresa" class="control-label" for="validationServer3">CNPJ</label>
                    <input asp-for="Cnpj_empresa" type="text" class="form-control" id="validationServer3" placeholder="Infome o CNPJ da empresa" required>
                    <span asp-validation-for="Cnpj_empresa" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Ramo_empresa" class="control-label" for="validationServer4">Ramo</label>
                    <input asp-for="Ramo_empresa" type="text" class="form-control" id="validationServer4" placeholder="Informe o ramo da empresa" required>
                    <span asp-validation-for="Ramo_empresa" class="text-danger"></span>
                </div>

            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Cep_empresa" class="control-label" for="validationServer5">CEP</label>
                    <input asp-for="Cep_empresa" type="text" class="form-control" id="validationServer5" placeholder="Informe o CEP" required>
                    <span asp-validation-for="Cep_empresa" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Telefone_empresa" class="control-label">Telefone</label>
                    <input asp-for="Telefone_empresa" type="text" class="form-control" placeholder="Informe o telefone principal">
                    <span asp-validation-for="Telefone_empresa" class="text-danger"></span>
                </div>


            </div>



            <div class="btnConfirmar">
                <button type="submit" value="Create" class="btn btnCadastrar my-2 my-sm-2 ml-2">Confirmar</button>
                <a type="button" asp-controller="Home" asp-action="Admin" class="btn btnFechar">Voltar</a>
            </div>
        </form>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}