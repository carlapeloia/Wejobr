@model Wejobr.Models.Empresa

    <link rel="stylesheet" href="~/css/vagas.css">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<link rel="stylesheet" href="~/css/site.css">
<link rel="stylesheet" href="~/css/NavFooter.css">
<link rel="stylesheet" href="~/css/vagas.css">

@{ ViewData["Title"] = "Wejobr"; }


<main class="container pt-4">


    <section class="container-fluid" id="vagasSection1">
        
        <h3 class="mt-2">Ao EXCLUIR o cadastro, os dados serão perdidos</h3>
        <hr/>
        <div class="container d-flex flex-column justify-content-center mt-3 mb-4 border border-light shadow-sm bg-light rounded">


            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-md-6 ml-auto">
                        <h6>Cargo</h6>
                        <p>@Html.DisplayFor(model => model.Nome_empresa)</p>
                    </div>
                    <div class="col-md-6 ml-auto">
                        <h6>Código da vaga</h6>
                        <p>@Html.DisplayFor(model => model.Cnpj_empresa)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 ml-auto">
                        <h6>Cargo</h6>
                        <p>@Html.DisplayFor(model => model.Cep_empresa)</p>
                    </div>
                    <div class="col-md-6 ml-auto">
                        <h6>Código da vaga</h6>
                        <p>@Html.DisplayFor(model => model.Ramo_empresa)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 ml-auto">
                        <h6>Salário</h6>
                        <p>@Html.DisplayFor(model => model.Telefone_empresa)</p>
                    </div>
                    <div class="col-md-6 ml-auto">
                        <h6>Localidade</h6>
                        <p>@Html.DisplayFor(model => model.Linkedin_empresa)</p>
                    </div>
                </div>

            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id_empresa" />
                <button class="btn btnDeletar2" type="submit">Excluir</button>
                <a class="btn btnFechar" asp-action="IndexAdmin">Voltar</a>
            </form>

        </div>


    </section>

    
</main>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
